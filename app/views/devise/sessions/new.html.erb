<style>
  body {
    padding-top: 0px;
    background: url(http://wallpaperspal.com/wp-content/uploads/Blue-Color-Scheme-Material-Design-Wallpaper.jpg) no-repeat center center fixed; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }
  .sign-in-form {
    position: fixed;
    top: 30vh;
  }
  .sign-in-form h2 {
    color: inherit;
  }
  .sign-in-form .md-label {
    color: inherit;
  }
  .sign-in-form md-content {
    background-color: transparent;
  }
  input:-webkit-autofill {
    -webkit-box-shadow: 0 0 0px 1000px white inset;
  }
  .md-input-container label {
    -color: inherit;
  }
</style>
<div class="sign-in-form col-md-2 col-md-offset-5" ng-controller="SignInController">
  <h2>Log in</h2>
  <md-content layout-padding>
    <form autocomplete="off" ng-submit="signIn()" name="userForm" novalidate>
      <md-input-container flex>
        <label>Email</label>
        <input type="email" ng-model="user.email">
      </md-input-container>
      <md-input-container flex>
        <label>Password</label>
        <input autocomplete="false" type="password" ng-model="user.password">
      </md-input-container>
      <md-checkbox ng-model="user.remember_me" aria-label="Remember me">
        <b>Remember me</b>
      </md-checkbox>
      <md-button type="submit" name="commit" class="md-raised md-primary">Log in</md-button>
    </form>
  </md-content>
</div>
